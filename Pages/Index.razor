        </div>
    </div>
</div>

@if ( _exibirJanelaToken )
{
    <div class="modal-backdrop show"></div>

    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: block;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Informe o token de autenticação</h5>
                    <button @onclick="CancelarInformacaoToken" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text" id="btnGroupAddon2">token</div>
                        </div>
                        <input type="text" class="form-control" placeholder="Informe seu token aqui" aria-describedby="btnGroupAddon2">
                    </div>
                </div>
                <div class="modal-footer">
                    <button @onclick="OcultarJanelaToken" type="button" class="btn btn-primary">Confirmar</button>
                    <button @onclick="CancelarInformacaoToken" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

@if ( _exibirJanelaSucesso )
{
    <div class="alert alert-success" role="alert">
        @_mensagemJanela;
    </div>
}
else if ( _exibirJanelaFalha )
{
    <div class="alert alert-danger" role="alert">
        @_mensagemJanela;
    </div>
}